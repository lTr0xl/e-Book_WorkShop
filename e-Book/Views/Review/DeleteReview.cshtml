@{
}

<h3>Do you want to delete this review?</h3>

<form method="post" asp-action="DeleteReview">
    <div class="form-group">
        <label asp-for="AppUser">Username</label>
        <input asp-for="AppUser" class="form-control" value="@Model.AppUser" disabled>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control" value="@Model.Comment" disabled></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" value="@Model.Rating" disabled>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Yes</button>
    <a asp-controller="book" asp-action="Details" asp-route-id="@Model.BookId" type="button" class="btn btn-danger">No</a>
</form>
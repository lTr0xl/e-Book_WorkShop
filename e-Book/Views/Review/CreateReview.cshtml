@{
}
<h3>Create Review</h3>

<form method="post" asp-action="CreateReview">
    <div class="form-group">
        <label asp-for="AppUser">Username</label>
        <input asp-for="AppUser" class="form-control" placeholder="Username">
        <span asp-validation-for="AppUser" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control" placeholder="Comment.."></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control" placeholder="Rating">
            <option selected="selected">--Select--</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @await RenderSectionAsync("css", required: false)

    <title>@ViewData["Title"] - e_Book</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/e_Book.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 navbar-custom">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Book" asp-action="Index">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Authors" asp-action="Index">Authors</a>
                        </li>
                        <li class="nav-item me-auto mb-2 mb-lg-0">
                            <a class="nav-link text-white" asp-area="" asp-controller="Genres" asp-action="Index">Genres</a>
                        </li>
                        <li class="nav-item me-6 mb-2 mb-lg-0">
                            <div class="nav-item dropdown">
                                <button class="btn" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS0lEP9RvX6WGXe4bltTvP2LMEL5GeCmAjJ-UFHvpWj2A&s" width="20px" height="20px" />
                                </button>
                                <div class="dropdown-menu dropdown-menu-dark dropdown-menu-md-end" aria-labelledby="dropdownMenuButton">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="dropdown-item" asp-area="" asp-controller="UserBooks" asp-action="Index">My books</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="UserBooks" asp-action="EditUserProfile">Edit profile</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                    }
                                    else
                                    {
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                                    }
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
